<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<skin>
	<windowstyle id="1" type="skinned">
		<color color="#000000" name="Background"/>
		<color color="#ffffff" name="LabelForeground"/>
		<color color="#000000" name="ListboxBackground"/>
		<color color="#ffffff" name="ListboxForeground"/>
		<color color="#000000" name="ListboxSelectedBackground"/>
		<color color="#ffffff" name="ListboxSelectedForeground"/>
		<color color="#000000" name="ListboxMarkedBackground"/>
		<color color="#ffffff" name="ListboxMarkedForeground"/>
		<color color="#000000" name="ListboxMarkedAndSelectedBackground"/>
		<color color="#ffffff" name="ListboxMarkedAndSelectedForeground"/>
		<color color="#ffffff" name="WindowTitleForeground"/>
		<color color="#000000" name="WindowTitleBackground"/>
	</windowstyle>
	<fonts>
		<!-- pick a funky name for the font, so we don't conflict  -->
		<font filename="nmsbd.ttf" name="FdLcD" scale="100"/>
		<font filename="/usr/share/fonts/lcd.ttf" name="LCD" scale="100"/>
		<font filename="/usr/share/fonts/OpenSans-Regular.ttf" name="RegularLCD" scale="95"/>
	</fonts>

<!-- template -->

<!-- main-->
	<screen name="InfoBarSummary" position="0,0" size="400,240">
	<!--clock background-->
	<ePixmap pixmap="display/lcdskins/clock_lcd_digital_flipClock_prime.png" position="0,0" size="400,240" zPosition="0" />
	<!--time line-->
	<ePixmap pixmap="display/lcdskins/clock_lcd_digital_flipClock_split_prime.png" position="0,0" size="400,240" zPosition="10" transparent="1" alphatest="on" />

	<widget source="global.CurrentTime" render="Label" position="45,24" size="120,134" font="RegularLCD;100" halign="center" valign="top" noWrap="1" zPosition="1" transparent="1" foregroundColor="#ffffff">
		<convert type="ClockToText">Format:%H</convert>
	</widget>
	<widget source="global.CurrentTime" render="Label" position="232,24" size="120,134" font="RegularLCD;100" halign="center" valign="top" noWrap="1" zPosition="1" transparent="1" foregroundColor="#ffffff">
		<convert type="ClockToText">Format:%M</convert>
	</widget>
	<!--DATE-->
	<widget source="global.CurrentTime" render="Label" position="center,172" size="220,50" font="RegularLCD;42" halign="center" valign="center" zPosition="1" foregroundColor="#0000deff" transparent="1">
    <convert type="ClockToText">Format:%e. %b</convert>
	</widget>
	<!--RECORD LED-->
	<widget source="session.RecordState" render="Pixmap" pixmap="display/lcdskins/clock_lcd_digital_flipClock_prime_rec.png" position="0,0" size="400,240" zPosition="10" transparent="1" alphatest="on" >
		<convert type="ConditionalShowHide">Blink</convert>
	</widget>
<!--END-->
</screen>
	<screen name="StandbySummary" position="0,0" size="400,240">
	<!--clock background-->
	<ePixmap pixmap="display/lcdskins/clock_lcd_digital_flipClock_prime.png" position="0,0" size="400,240" zPosition="0" />
	<!--time line-->
	<ePixmap pixmap="display/lcdskins/clock_lcd_digital_flipClock_split_prime.png" position="0,0" size="400,240" zPosition="10" transparent="1" alphatest="on" />

	<!--TIME-->
	<widget source="global.CurrentTime" render="Label" position="45,24" size="120,134" font="RegularLCD;100" halign="center" valign="top" noWrap="1" zPosition="1" transparent="1" foregroundColor="#ffffff">
		<convert type="ClockToText">Format:%H</convert>
	</widget>
	<widget source="global.CurrentTime" render="Label" position="232,24" size="120,134" font="RegularLCD;100" halign="center" valign="top" noWrap="1" zPosition="1" transparent="1" foregroundColor="#ffffff">
		<convert type="ClockToText">Format:%M</convert>
	</widget>
	<!--DATE-->
	<widget source="global.CurrentTime" render="Label" position="center,172" size="220,50" font="RegularLCD;42" halign="center" valign="center" zPosition="1" foregroundColor="#0000deff" transparent="1">
		<convert type="ClockToText">Format:%e. %b</convert>
	</widget>
	<!--RECORD LED-->
	<widget source="session.RecordState" render="Pixmap" pixmap="display/lcdskins/clock_lcd_digital_flipClock_prime_rec.png" position="0,0" size="400,240" zPosition="10" transparent="1" alphatest="on" >
		<convert type="ConditionalShowHide">Blink</convert>
	</widget>
<!--END-->
</screen>
	<include filename="/usr/share/enigma2/display/lcdskins/skin_display.xml" />
</skin>
